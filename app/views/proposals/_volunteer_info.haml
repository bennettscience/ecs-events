.speakerinfo
  .row
    .col-md-4
      = image_tag speaker.profile_picture(:size => 120), class: 'img-responsive img-rounded'
    .col-md-8
      %h4
        = link_to speaker.name, user_path(speaker.id)
      - if speaker.affiliation?
        .text-muted
          from
          = speaker.affiliation
